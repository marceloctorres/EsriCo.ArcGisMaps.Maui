<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="view"
             x:Class="EsriCo.ArcGisMaps.Maui.UI.DrawingStatusView"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="CenterAndExpand">
  <ContentView.Content>
    <StackLayout x:Name="Indicador"
                 Margin="0"
                 Padding="5">
      <ActivityIndicator IsRunning="{Binding IsVisible, Source={x:Reference view}}"
                         IsVisible="{Binding IsVisible, Source={x:Reference view}}"
                         Color="{Binding IndicatorColor, Source={x:Reference view}}"/>
    </StackLayout>
  </ContentView.Content>
</ContentView>