<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EsriCo.ArcGisMaps.Maui.Resources.Fonts">
  <OnPlatform x:Key="SmallFont"
              x:TypeArguments="Font">
    <On Platform="iOS"
        Value="Micro" />
    <On Platform="Android"
        Value="Micro" />
    <On Platform="UWP"
        Value="Segoe UI Light,12" />
  </OnPlatform>
  <OnPlatform x:Key="NormalFont"
              x:TypeArguments="Font">
    <On Platform="iOS"
        Value="Micro" />
    <On Platform="Android"
        Value="Small" />
    <On Platform="UWP"
        Value="Segoe UI Light,14" />
  </OnPlatform>
  <OnPlatform x:Key="BoldFont"
              x:TypeArguments="Font">
    <On Platform="iOS"
        Value="Bold,Micro" />
    <On Platform="Android"
        Value="Bold,Small" />
    <On Platform="UWP"
        Value="Segoe UI Light,Bold,14" />
  </OnPlatform>
  <OnPlatform x:Key="TitleFont"
              x:TypeArguments="Font">
    <On Platform="iOS"
        Value="Bold,Small" />
    <On Platform="Android"
        Value="Bold,Medium" />
    <On Platform="UWP"
        Value="Segoe UI Light,Bold,16" />
  </OnPlatform>
</ResourceDictionary>